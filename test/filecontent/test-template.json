{
	"variables": [
	{ "key": "root", "value": "REPLACE_IN_MAKEFILE" }
	],

	"tests": [
	{
		"identifier": "simplecontent0",
		"description": "no such file test",
		"expectedresult": false,
		"filecontent": {
			"path": "${root}",
			"file": "nosuchfile",
			"expression": ".*"
		}
	},

	{
		"identifier": "simplecontent1",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": "testfile0",
			"expression": ".*(Test).*"
		}
	},

	{
		"identifier": "simplecontent2",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": "testfile0",
			"expression": "(.*)"
		},
		"regexp": {
			"value": "Test"
		}
	},

	{
		"identifier": "simplecontent3",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": "testfile0",
			"expression": "^(T\\S+).*"
		},
		"regexp": {
			"value": "Test"
		}
	},

	{
		"identifier": "filecontent0",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": ".*file1",
			"expression": "^Version = (\\S+)"
		},
		"evr": {
			"operation": "<",
			"value": "0.6"
		}
	},

	{
		"identifier": "filecontent1",
		"expectedresult": false,
		"filecontent": {
			"path": "${root}",
			"file": ".*file1",
			"expression": "^Version = (\\S+)"
		},
		"evr": {
			"operation": "<",
			"value": "0.6"
		},
		"if": [ "simplecontent0" ]
	},

	{
		"identifier": "filecontent2",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": ".*file1",
			"expression": "^Version = (\\S+)"
		},
		"evr": {
			"operation": "<",
			"value": "0.6"
		},
		"if": [ "simplecontent1" ]
	},

	{
		"identifier": "filecontent3",
		"description": "version is ok",
		"expectedresult": false,
		"filecontent": {
			"path": "${root}",
			"file": ".*file1",
			"expression": "^Version = (\\S+)"
		},
		"evr": {
			"operation": "<",
			"value": "0.4z"
		}
	},

	{
		"identifier": "anyfile0",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}/data",
			"file": ".*",
			"expression": "(.*)"
		}
	}
		
	]
}
